int main() {
    ProductManager productManager;
    UserManager userManager;
    Cart cart;

    int choice;

    do {
        cout << "\n=== Online Shopping System ===\n";
        cout << "1. Add Product\n";
        cout << "2. Update Product\n";
        cout << "3. Delete Product\n";
        cout << "4. View Products\n";
        cout << "5. Register User\n";
        cout << "6. Login User\n";
        cout << "7. View Profile\n";
        cout << "8. Add to Cart\n";
        cout << "9. Remove from Cart\n";
        cout << "10. View Cart\n";
        cout << "11. Calculate Total\n";
        cout << "12. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                productManager.addProduct();
                break;
            case 2:
                productManager.updateProduct();
                break;
            case 3:
                productManager.deleteProduct();
                break;
            case 4:
                productManager.viewProducts();
                break;
            case 5:
                userManager.registerUser();
                break;
            case 6:
                userManager.loginUser();
                break;
            case 7:
                userManager.viewProfile();
                break;
            case 8: {
                int id;
                cout << "Enter Product ID to add to cart: ";
                cin >> id;
                Product* product = productManager.getProductById(id);
                if (product) {
                    cart.addToCart(product);
                } else {
                    cout << "Product not found.\n";
                }
                break;
            }
            case 9: {
                int id;
                cout << "Enter Product ID to remove from cart: ";
                cin >> id;
                cart.removeFromCart(id);
                break;
            }
            case 10:
                cart.viewCart();
                break;
            case 11:
                cart.calculateTotal();
                break;
            case 12:
                cout << "Thank you for using the system. Goodbye!\n";
                break;
            default:
                cout << "Invalid choice. Please try again.\n";
        }

    } while (choice != 12);

    return 0;
}
